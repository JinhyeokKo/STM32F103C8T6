BasedOnStyle: Microsoft  # Microsoft 스타일을 기본으로 사용
IndentWidth: 4          # 4칸 들여쓰기
ColumnLimit: 80         # 한 줄 최대 길이
AlignConsecutiveMacros: true  # 매크로 정렬
AlignConsecutiveAssignments: true  # 연속된 할당문 정렬
AllowShortFunctionsOnASingleLine: None  # 짧은 함수도 여러 줄로 분리
BraceWrapping:
  AfterControlStatement: true  # 제어문 후 중괄호는 새 줄에
  AfterFunction: true         # 함수 후 중괄호는 새 줄에
  AfterStruct: true          # 구조체 정의 후 중괄호는 새 줄에
BreakBeforeBraces: Custom    # 사용자 정의 중괄호 스타일
SpaceBeforeParens: ControlStatements  # 제어문 괄호 전 공백